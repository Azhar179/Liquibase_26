pipeline {
    agent any

    environment {
        LIQUIBASE_HOME = 'C:/path/to/liquibase'  // Path to Liquibase installation
        LIQUIBASE_CHANGELOG = 'src/main/resources/db/changelog/changelog-master.xml'  // Relative path from GitHub repo
        LIQUIBASE_URL = 'jdbc:mysql://localhost:3306/your_database'  // Database URL
        LIQUIBASE_USERNAME = 'root'  // DB username
        LIQUIBASE_PASSWORD = 'root'  // DB password
        LIQUIBASE_DRIVER = 'com.mysql.cj.jdbc.Driver'  // Database driver
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone GitHub repo
                git url: 'https://github.com/your-repo.git', branch: 'main'
            }
        }
        stage('Update Database') {
            steps {
                script {
                    bat """
                    cd ${LIQUIBASE_HOME}
                    liquibase --changeLogFile=${LIQUIBASE_CHANGELOG} ^
                              --url=${LIQUIBASE_URL} ^
                              --username=${LIQUIBASE_USERNAME} ^
                              --password=${LIQUIBASE_PASSWORD} ^
                              --driver=${LIQUIBASE_DRIVER} update
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Liquibase update completed successfully.'
        }
        failure {
            echo 'Liquibase update failed.'
        }
    }
}
