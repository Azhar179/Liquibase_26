pipeline {
    agent any
    environment {
        LIQUIBASE_HOME = 'C:\liquibase'
        LIQUIBASE_CHANGELOG = 'src/main/resources/db/changelog/changelog-master.xml'
        LIQUIBASE_URL = 'jdbc:mysql://localhost:3306/twenty_six'
        LIQUIBASE_USERNAME = 'root'
        LIQUIBASE_PASSWORD = 'root'
        LIQUIBASE_DRIVER = 'com.mysql.cj.jdbc.Driver'
    }

    stages {
        stage('Checkout') {
            steps {
                // Use the correct GitHub repository URL
                git url: 'https://github.com/Azhar179/Liquibase_26.git', branch: 'master'
            }
        }
        stage('Update Database') {
            steps {
                script {
                    bat """
                    cd ${LIQUIBASE_HOME}
                    liquibase --changeLogFile=${LIQUIBASE_CHANGELOG} ^
                              --url=${LIQUIBASE_URL} ^
                              --username=${LIQUIBASE_USERNAME} ^
                              --password=${LIQUIBASE_PASSWORD} ^
                              --driver=${LIQUIBASE_DRIVER} update
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Liquibase update completed successfully.'
        }
        failure {
            echo 'Liquibase update failed.'
        }
    }
}
